---
---
[
{% for post in site.posts %}
  {
	  "title"    : "{{ post.title }}",
	  "category" : "{{ post.categories }}",
	  "tags"     : [{% for tag in post.tags %}"{{ tag }}",{% endfor %} null],
	  "href"     : "{{ post.url }}",
	  "date"     : {
	    "day"   : "{{ post.date | date: "%d" }}",
	    "month" : "{{ post.date | date: "%B" }}",
	    "year"  : "{{ post.date | date: "%Y" }}"
	  }
  },
  {% endfor %}null
]